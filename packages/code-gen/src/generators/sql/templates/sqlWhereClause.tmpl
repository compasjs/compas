{{ if (item.whereFields.length > 0) { }}
{{ let result = "WHERE"; }}
{{ for (const it of item.whereFields) { }}
  {{ result += " (COALESCE(${where." + it.name + " ?? null}, NULL) IS NULL OR " + item.shortName + "." + `"${it.key}"` + " "; }}

  {{ if (it.type === "equal") { }}
    {{ result += "= ${where." + it.name + "?? null}"; }}
  {{ } else if (it.type === "greaterThan") { }}
    {{ result += "> ${where." + it.name + "?? null}"; }}
  {{ } else if (it.type === "lowerThan") { }}
    {{ result += "< ${where." + it.name + " ?? null}"; }}
  {{ } else if (it.type === "like") { }}
    {{ result += "LIKE ${'%' + where." + it.name + " +'%'}"; }}
  {{ } else if (it.type === "in") { }}
    {{ result += "= ANY (${sql.array(where?." + it.name + " ?? [])}::uuid[])"; }}
  {{ } }}

  {{ result += ") AND"; }}
{{ } }}
