{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "module": "NodeNext",
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": false,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "extendedDiagnostics": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["packages/**/*"],
  "exclude": ["**/*.test.js"]
}
